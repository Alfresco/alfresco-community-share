<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>org/alfresco/customise-dashboard</template-type>
    <components>

       <!-- Title -->
       <component>
          <region-id>title</region-id>
          <url>/components/title/user-dashboard-title</url>
       </component>

       <!-- Customise Layout -->
       <component>
          <region-id>customise-layout</region-id>
          <url>/components/dashboard/customise-layout</url>
          <properties>
             <dashboardType>user</dashboardType>
          </properties>
       </component>

       <!-- Customise Dashlets -->
       <component>
          <region-id>customise-dashlets</region-id>
          <url>/components/dashboard/customise-dashlets</url>
          <properties>
             <dashboardType>user</dashboardType>
          </properties>
       </component>
    </components>
</template-instance>