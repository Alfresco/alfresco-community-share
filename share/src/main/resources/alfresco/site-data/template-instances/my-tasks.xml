      <!-- All Filter -->
      <component>
         <region-id>all-filter</region-id>
         <url>/components/workflow/filter/all</url>
         <properties>
            <mode>tasks</mode>
         </properties>
      </component>

      <!-- Due Filter -->
      <component>
         <region-id>due-filter</region-id>
         <url>/components/workflow/filter/due</url>
      </component>

      <!-- Priority Filter -->
      <component>
         <region-id>priority-filter</region-id>
