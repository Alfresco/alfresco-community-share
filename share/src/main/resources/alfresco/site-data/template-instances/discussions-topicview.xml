<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
   <template-type>org/alfresco/discussions-topicview</template-type>
   <properties>
      <pageFamily>discussions-topiclist</pageFamily>
      <container>discussions</container>
   </properties>
   <components>

      <!-- Title -->
      <component>
         <region-id>title</region-id>
         <url>/components/title/collaboration-title</url>
      </component>

      <!-- Navigation -->
      <component>
         <region-id>navigation</region-id>
         <url>/components/navigation/collaboration-navigation</url>
      </component>

      <!-- Toolbar -->
      <component>
         <region-id>toolbar</region-id>
         <url>/components/discussions/toolbar</url>
         <properties>
            <showNavigationBar>true</showNavigationBar>
         </properties>
      </component>

      <!-- Topic -->
      <component>
         <region-id>topic</region-id>
         <url>/components/discussions/topic</url>
      </component>

      <!-- Replies -->
      <component>
         <region-id>replies</region-id>
         <url>/components/discussions/replies</url>
      </component>

   </components>
</template-instance>