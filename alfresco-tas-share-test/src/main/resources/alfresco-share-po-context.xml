<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:annotation-config />
   <import resource="classpath:dataprep-context.xml" />

   <!-- scans for annotated classes -->
   <context:component-scan base-package="org.alfresco" />

   <bean id="language" class="org.alfresco.common.Language">
      <description>
         This bean is used to handle internationalization strings
      </description>
      <constructor-arg type="java.lang.String" value="language/page_objects" />
      <constructor-arg type="java.lang.String" value="${locale.language}" />
      <constructor-arg type="java.lang.String" value="${locale.country}" />
   </bean>

   <bean id="alfrescoHttpClientFactory" class="org.alfresco.dataprep.AlfrescoHttpClientFactory">
      <property name="host" value="${alfresco.server.http}" />
      <property name="port" value="${alfresco.port.http}" />
      <property name="scheme" value="http" />
      <property name="sharePort" value="${share.port.http}" />
   </bean>
</beans>
