<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Test Suite" parallel="classes" thread-count="3">
   <listeners>
      <listener class-name="org.alfresco.share.RetryListener"/>
   </listeners>

   <test name="Sanity Tests">
      <groups>
         <run>
            <include name="sanity"/>
         </run>
      </groups>
      <packages>
         <package name="org.alfresco.share.alfrescoContent.socialFeatures.*"/>
         <package name="org.alfresco.share.site.accessingExistingSites.*"/>
      </packages>
   </test>
</suite>