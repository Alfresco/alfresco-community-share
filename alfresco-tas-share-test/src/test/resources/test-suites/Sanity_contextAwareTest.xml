<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Test Suite" parallel="classes" thread-count="3">
   <listeners>
      <listener class-name="org.alfresco.share.RetryListener"/>
   </listeners>

   <test name="Sanity Tests">
      <groups>
         <run>
            <include name="sanity"/>
            <exclude name="regression"/>
            <exclude name="unit"/>
            <exclude name="SmartFolders"/>
            <exclude name="ExternalUsers"/>
            <exclude name="office"/>
            <exclude name="TransformationServer"/>
            <exclude name="xsstests"/>
            <exclude name="admin-tools"></exclude>
            <exclude name="user-dashboard"/>
            <exclude name="user"/>
            <exclude name="auth"/>
         </run>
      </groups>
      <packages>
         <package name="org.alfresco.adminconsole.*"/>
         <package name="org.alfresco.share.alfrescoContent.socialFeatures.*"/>
         <package name="org.alfresco.share.alfrescoContent.viewingContent.*"/>
         <package name="org.alfresco.share.alfrescoContent.workingWithFilesAndFolders.*"/>
         <package name="org.alfresco.share.alfrescoContent.workingWithFilesOutsideTheLibrary.*"/>
         <package name="org.alfresco.share.RebrandTests.*"/>
         <package name="org.alfresco.share.searching.*"/>
         <package name="org.alfresco.share.security.*"/>
         <package name="org.alfresco.share.site.accessingExistingSites.*"/>
         <package name="org.alfresco.share.site.analyzingASite.*"/>
         <package name="org.alfresco.share.sitesFeatures.calendar.*"/>
         <package name="org.alfresco.share.sitesFeatures.dataLists.*"/>
         <package name="org.alfresco.share.sitesFeatures.discussions.*"/>
         <package name="org.alfresco.share.sitesFeatures.Links.*"/>
         <package name="org.alfresco.share.sitesFeatures.wiki.*"/>
         <package name="org.alfresco.share.tasksAndWorkflows.*"/>
         <package name="org.alfresco.share.userRolesAndPermissions.*"/>
      </packages>

      <classes>
         <class name="org.alfresco.share.site.CreateSiteTests"></class>
         <class name="org.alfresco.share.site.DeleteSiteTests"></class>
         <class name="org.alfresco.share.site.EditSiteDetailsTests"></class>
         <class name="org.alfresco.share.site.FavoriteSiteTests"></class>
      </classes>
   </test>
</suite>