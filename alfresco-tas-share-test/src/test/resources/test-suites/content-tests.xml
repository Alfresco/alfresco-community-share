<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Content Tests" parallel="classes" thread-count="3">
   <listeners>
      <listener class-name="org.alfresco.utility.report.HtmlReportListener"/>
      <listener class-name="org.alfresco.share.RetryListener"/>
   </listeners>

   <test name="Content Tests">
      <groups>
         <run>
            <include name="content"/>
         </run>
      </groups>
      <packages>
         <package name="org.alfresco.share.alfrescoContent.buildingContent"/>
         <package name="org.alfresco.share.alfrescoContent.organizingContent.*"/>
      </packages>
   </test>

</suite>