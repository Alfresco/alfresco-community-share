<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="User Dashboard Tests" parallel="methods" thread-count="3">
   <listeners>
      <listener class-name="org.alfresco.utility.report.HtmlReportListener"/>
   </listeners>

   <test name="User and Site Dashboard Tests">
      <groups>
         <run>
            <include name="user-dashboard"/>
            <include name="site-dashboard"/>
            <exclude name="regression"/>
         </run>
      </groups>
      <packages>
         <package name="org.alfresco.share.userDashboard.*"/>
         <package name="org.alfresco.share.site.*"/>
      </packages>
   </test>

</suite>