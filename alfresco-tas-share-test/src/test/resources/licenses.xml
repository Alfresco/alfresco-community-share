<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="AdminConsole-License" preserve-order="true"
       parallel="false" thread-count="2">
<listeners>
   <listener class-name="org.alfresco.utility.report.HtmlReportListener" />
</listeners>
<!-- in order for this to work you need to pass -Denvironment=docker to
   use the docker.properties -->
<test name="Share">
   <classes>
      <class name="org.alfresco.po.adminconsole.LicenseTests"></class>
      
      <class name="org.alfresco.share.adminTools.modelManager.ModelManagerTests">
         <methods>
            <include name="importModel"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.adminTools.users.ImportUsersTests">
         <methods>
            <include name="importUsers"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.alfrescoContent.buildingContent.UploadingFilesTests">
         <methods>
            <include name="UploadASingleFileToSite"/>
            <include name="UploadFileInFolder"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.alfrescoContent.workingWithFilesOutsideTheLibrary.myFiles.MyFilesDownloadTests">
         <methods>
            <include name="myFilesDownloadFileFromAlfresco"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.alfrescoContent.workingWithFilesOutsideTheLibrary.myFiles.MyFilesUnzipContentTests">
         <methods>
            <include name="unzipZipArchiveToMyFiles"/>
            <include name="unzipACPArchiveToMyFiles"/>
         </methods>
      </class>

      <class name="org.alfresco.share.alfrescoContent.workingWithFilesOutsideTheLibrary.myFiles.MyFilesUploadContentTests">
         <methods>
            <include name="myFilesUploadDocument"/>
            <include name="myFilesUpdateDocumentNewVersion"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.alfrescoContent.workingWithFilesOutsideTheLibrary.myFiles.taggingAndSocialFeatures.MyFilesSocialFeaturesTests">
         <methods>
            <include name="myFilesLikeFile"/>
            <include name="myFilesUnlikeFile"/>
            <include name="myFilesAddCommentToFile"/>
         </methods>
      </class>

      <class name="org.alfresco.share.alfrescoContent.workingWithFilesOutsideTheLibrary.repository.ActionsUploadTests">
         <methods>
            <include name="uploadDocument"/>
            <include name="updateDocumentNewVersion"/>
         </methods>
      </class>

      <class name="org.alfresco.share.alfrescoContent.workingWithFilesOutsideTheLibrary.sharedFiles.actions.UploadTests">
         <methods>
            <include name="uploadDocument"/>
            <include name="updateDocumentNewVersion"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.site.siteDashboard.ImagePreviewDashletTests">
         <methods>
            <include name="imagePreviewDashletWithSomeImages"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.userDashboard.dashlets.MyProfileTests">
         <methods>
            <include name="myLimitedProfileDashlet"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.userProfile.UpdateAndViewProfileTests">
         <methods>
            <include name="uploadNewPhoto"/>
         </methods>
      </class>

      <class name="org.alfresco.share.userRolesAndPermissions.collaborator.CollaboratorFilesOnlyTests">
         <methods>
            <include name="collaboratorUploadContent"/>
            <include name="collaboratorUploadNewVersionSelfCreated"/>
            <include name="collaboratorUploadNewVersionOtherUserCreated"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.userRolesAndPermissions.consumer.ConsumerFoldersAndFilesTests">
         <methods>
            <include name="consumerPermissionRetention"/>
         </methods>
      </class>
      
      <class name="org.alfresco.share.userRolesAndPermissions.contributor.ContributorFilesOnlyTests">
         <methods>
            <include name="uploadContent"/>
            <include name="uploadNewVersionForItemCreatedBySelf"/>
            <include name="editOfflineForContentCreatedBySelf"/>
            <include name="revertToPreviousVersion"/>
         </methods>
      </class>

      <class name="org.alfresco.po.adminconsole.InboundEmailTests"></class>

   </classes>
</test>
</suite>